{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "title": "HELM Ingress configuration",
  "definitions": {
    "nameOverride": {
      "type": "string",
      "description": "[helm-common] Override the name (can be in the service or values)"
    },
    "fullnameOverride": {
      "type": "string",
      "description": "[helm-common] Override the fullname (can be in the service or values)"
    },
    "releaseNameOverride": {
      "type": "string",
      "description": "[helm-common] Override the the release name (can be in the service, values or global)"
    },
    "releaseTrunc": {
      "type": "integer",
      "description": "[helm-common] The release name trunk length (can be in the service, values or global)",
      "default": 20
    },
    "nameTrunc": {
      "type": "integer",
      "description": "[helm-common] The chart name trunk length (can be in the service, values or global)",
      "default": 63
    },
    "prefixTrunc": {
      "type": "integer",
      "description": "[helm-common] The prefix trunk length (release and chart name) (can be in the service, values or global)",
      "default": 40
    },
    "labels": {
      "type": "object",
      "description": "[helm-common] Pod labels",
      "additionalProperties": {
        "type": "string"
      }
    },
    "annotations": {
      "type": "object",
      "description": "[helm-common] Pod annotations",
      "additionalProperties": {
        "type": "string"
      }
    },
    "serviceName": {
      "type": "string",
      "description": "[helm-common] The name of the service (not Kubernetes service), this will postfix the name"
    }
  },
  "additionalProperties": false,
  "properties": {
    "global": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "releaseNameOverride": {
          "$ref": "#/definitions/releaseNameOverride"
        },
        "releaseTrunc": {
          "$ref": "#/definitions/releaseTrunc"
        },
        "nameTrunc": {
          "$ref": "#/definitions/nameTrunc"
        },
        "prefixTrunc": {
          "$ref": "#/definitions/prefixTrunc"
        }
      }
    },
    "common": {},
    "nameOverride": {
      "$ref": "#/definitions/nameOverride"
    },
    "fullnameOverride": {
      "$ref": "#/definitions/fullnameOverride"
    },
    "releaseNameOverride": {
      "$ref": "#/definitions/releaseNameOverride"
    },
    "serviceName": {
      "$ref": "#/definitions/serviceName"
    },
    "releaseTrunc": {
      "$ref": "#/definitions/releaseTrunc"
    },
    "nameTrunc": {
      "$ref": "#/definitions/nameTrunc"
    },
    "prefixTrunc": {
      "$ref": "#/definitions/prefixTrunc"
    },
    "labels": {
      "$ref": "#/definitions/labels"
    },
    "annotations": {
      "$ref": "#/definitions/annotations"
    },
    "applicationReleaseName": {
      "type": "string",
      "description": "The name of the release of the application, used to do the blue-green switch."
    },
    "createService": {
      "type": "boolean",
      "description": "Create the service, the service is used to do the blue-green switch.",
      "default": false
    },
    "tls": {
      "type": "object",
      "title": "tls",
      "description": "TLS configuration",
      "additionalProperties": false,
      "properties": {
        "secretNamePrefix": {
          "type": "string",
          "title": "Secret name prefix",
          "description": "Prefix of the secret name"
        }
      }
    },
    "traefikMiddleware": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Enable Traefik middleware",
          "default": true
        },
        "spec": {
          "type": "object",
          "description": "Traefik middleware specification"
        }
      }
    },
    "hostsGroups": {
      "type": "array",
      "title": "Hosts groups",
      "description": "Defined a group of hosts that will be in the same Ingress",
      "items": {
        "type": "object",
        "title": "Host group",
        "additionalProperties": false,
        "properties": {
          "enabled": {
            "type": "boolean",
            "title": "enabled",
            "description": "Enable the group, if false the group will not be created",
            "default": true
          },
          "name": {
            "type": "string",
            "title": "name",
            "description": "Name of the hosts group, used in the Ingress name"
          },
          "annotations": {
            "type": "object",
            "title": "annotations",
            "description": "Specific annotations to the group",
            "additionalProperties": { "type": "string" }
          },
          "type": {
            "type": "string",
            "title": "type",
            "description": "The type of the group, can be 'ingress', 'traefik-ingress-route'",
            "enum": ["ingress", "traefik-ingress-route"],
            "default": "ingress"
          },
          "tls": {
            "type": "boolean",
            "title": "tls",
            "description": "Enable TLS for the group",
            "default": true
          },
          "hosts": {
            "type": "array",
            "title": "hosts",
            "description": "The hosts name",
            "items": {
              "type": "string",
              "title": "host",
              "description": "The host name"
            }
          },
          "traefikEntryPoints": {
            "type": "array",
            "title": "Entry Points",
            "description": "See the Traefik documentation for more information."
          },
          "traefikTLS": {
            "type": "object",
            "title": "TLS Traefik",
            "description": "TLS for Traefik IngressRoute"
          },
          "traefikHosts": {
            "type": "array",
            "title": "Traefik hosts",
            "description": "The hosts definitions for Traefik IngressRoute",
            "items": {
              "type": "object",
              "title": "Traefik host",
              "description": "The host definition for Traefik IngressRoute",
              "properties": {
                "kind": {
                  "type": "string",
                  "default": "Rule",
                  "description": "See the Traefik documentation for more information."
                },
                "match": {
                  "type": "string",
                  "description": "See the Traefik documentation: https://doc.traefik.io/traefik/v3.5/routing/routers/#rule"
                },
                "observability": {
                  "type": "object",
                  "description": "See the Traefik documentation for more information."
                },
                "priority": {
                  "type": "integer",
                  "description": "See the Traefik documentation for more information."
                },
                "syntax": {
                  "type": "string",
                  "description": "See the Traefik documentation for more information."
                }
              }
            }
          }
        }
      }
    },
    "paths": {
      "type": "object",
      "title": "paths",
      "description": "The paths configuration",
      "additionalProperties": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "nameOverride": {
            "$ref": "#/definitions/nameOverride"
          },
          "fullnameOverride": {
            "$ref": "#/definitions/fullnameOverride"
          },
          "releaseNameOverride": {
            "$ref": "#/definitions/releaseNameOverride"
          },
          "serviceName": {
            "$ref": "#/definitions/serviceName"
          },
          "releaseTrunc": {
            "$ref": "#/definitions/releaseTrunc"
          },
          "nameTrunc": {
            "$ref": "#/definitions/nameTrunc"
          },
          "prefixTrunc": {
            "$ref": "#/definitions/prefixTrunc"
          },
          "labels": {
            "$ref": "#/definitions/labels"
          },
          "annotations": {
            "$ref": "#/definitions/annotations"
          },
          "type": {
            "type": "string",
            "description": "The type of the service",
            "default": "ClusterIP"
          },
          "port": {
            "type": "integer",
            "default": 80
          },
          "targetPort": {
            "type": ["string", "integer"]
          },
          "protocol": {
            "type": "string",
            "default": "TCP"
          },
          "portName": {
            "type": "string",
            "description": "The name of the port",
            "default": "http"
          },
          "appProtocol": {
            "type": "string",
            "description": "The application protocol"
          },
          "externalName": {
            "type": "string",
            "description": "The external name of the service"
          },
          "serviceRelease": {
            "type": "string"
          },
          "servicePort": {
            "type": "integer"
          },
          "selector": {
            "type": "object",
            "description": "The selector of the Pod",
            "additionalProperties": {
              "type": "string"
            }
          },
          "path": {
            "type": "string",
            "description": "The path of the service"
          },
          "traefikHealthCheck": {
            "type": "object",
            "title": "Traefik health check",
            "description": "See the Traefik documentation for more information."
          },
          "traefikNativeLB": {
            "type": "boolean",
            "title": "Traefik native load balancer",
            "description": "See the Traefik documentation for more information."
          },
          "traefikNodePortLB": {
            "type": "boolean",
            "title": "Traefik node port load balancer",
            "description": "See the Traefik documentation for more information."
          },
          "traefikPassHostHeader": {
            "type": "boolean",
            "title": "Pass host header",
            "description": "See the Traefik documentation for more information.",
            "default": true
          },
          "traefikResponseForwarding": {
            "type": "object",
            "title": "Traefik response forwarding",
            "description": "See the Traefik documentation for more information."
          },
          "traefikScheme": {
            "type": "string",
            "title": "Traefik scheme",
            "description": "See the Traefik documentation for more information."
          },
          "traefikServersTransport": {
            "type": "string",
            "title": "Traefik servers transport",
            "description": "See the Traefik documentation for more information."
          },
          "traefikSticky": {
            "type": "object",
            "title": "Traefik sticky",
            "description": "See the Traefik documentation for more information."
          },
          "traefikStrategy": {
            "type": "string",
            "title": "Traefik strategy",
            "description": "See the Traefik documentation for more information."
          },
          "traefikWeight": {
            "type": "integer",
            "title": "Traefik weight",
            "description": "See the Traefik documentation for more information."
          }
        }
      }
    }
  }
}
