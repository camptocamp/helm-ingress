{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "title": "HELM Ingress configuration",
  "definitions": {
    "nameOverride": {
      "type": "string",
      "description": "[helm-common] Override the name"
    },
    "fullnameOverride": {
      "type": "string",
      "description": "[helm-common] Override the fullname"
    },
    "releaseTrunc": {
      "type": "integer",
      "description": "[helm-common] The release trunk length",
      "default": 20
    },
    "prefixTrunc": {
      "type": "integer",
      "description": "[helm-common] The prefix trunk length (release and chart name)",
      "default": 40
    },
    "labels": {
      "type": "object",
      "description": "[helm-common] Pod labels",
      "additionalProperties": {
        "type": "string"
      }
    },
    "annotations": {
      "type": "object",
      "description": "[helm-common] Pod annotations",
      "additionalProperties": {
        "type": "string"
      }
    },
    "serviceName": {
      "type": "string",
      "description": "[helm-common] The name of the service (not Kubernetes service), this will postfix the name"
    }
  },
  "additionalProperties": false,
  "properties": {
    "global": {},
    "common": {},
    "nameOverride": {
      "$ref": "#/definitions/nameOverride"
    },
    "fullnameOverride": {
      "$ref": "#/definitions/fullnameOverride"
    },
    "serviceName": {
      "$ref": "#/definitions/serviceName"
    },
    "releaseTrunc": {
      "$ref": "#/definitions/releaseTrunc"
    },
    "prefixTrunc": {
      "$ref": "#/definitions/prefixTrunc"
    },
    "labels": {
      "$ref": "#/definitions/labels"
    },
    "annotations": {
      "$ref": "#/definitions/annotations"
    },
    "applicationReleaseName": {
      "type": "string",
      "description": "The name of the release of the application, used to do the blue-green switch."
    },
    "createService": {
      "type": "boolean",
      "description": "Create the service, the service is used to do the blue-green switch.",
      "default": false
    },
    "tls": {
      "type": "object",
      "title": "tls",
      "description": "TLS configuration",
      "additionalProperties": false,
      "properties": {
        "secretNamePrefix": {
          "type": "string",
          "title": "Secret name prefix",
          "description": "Prefix of the secret name"
        }
      }
    },
    "hostsGroups": {
      "type": "array",
      "title": "Hosts groups",
      "description": "Defined a group of hosts that will be in the same Ingress",
      "items": {
        "type": "object",
        "title": "Host group",
        "additionalProperties": false,
        "properties": {
          "name": {
            "type": "string",
            "title": "name",
            "description": "Name of the hosts group, used in the Ingress name"
          },
          "annotations": {
            "type": "object",
            "title": "annotations",
            "description": "Specific annotations to the group",
            "additionalProperties": { "type": "string" }
          },
          "tls": {
            "type": "boolean",
            "title": "tls",
            "description": "Enable TLS for the group",
            "default": true
          },
          "hosts": {
            "type": "array",
            "title": "hosts",
            "description": "The hosts name",
            "items": {
              "type": "string",
              "title": "host",
              "description": "The host name"
            }
          }
        }
      }
    },
    "paths": {
      "type": "object",
      "title": "paths",
      "description": "The paths configuration",
      "additionalProperties": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "nameOverride": {
            "$ref": "#/definitions/nameOverride"
          },
          "fullnameOverride": {
            "$ref": "#/definitions/fullnameOverride"
          },
          "serviceName": {
            "$ref": "#/definitions/serviceName"
          },
          "releaseTrunc": {
            "$ref": "#/definitions/releaseTrunc"
          },
          "prefixTrunc": {
            "$ref": "#/definitions/prefixTrunc"
          },
          "labels": {
            "$ref": "#/definitions/labels"
          },
          "annotations": {
            "$ref": "#/definitions/annotations"
          },
          "type": {
            "type": "string",
            "description": "The type of the service",
            "default": "ClusterIP"
          },
          "port": {
            "type": "integer",
            "default": 80
          },
          "targetPort": {
            "type": ["string", "integer"]
          },
          "protocol": {
            "type": "string",
            "default": "TCP"
          },
          "portName": {
            "type": "string",
            "description": "The name of the port",
            "default": "http"
          },
          "externalName": {
            "type": "string",
            "description": "The external name of the service"
          },
          "serviceRelease": {
            "type": "string"
          },
          "servicePort": {
            "type": "integer"
          },
          "selector": {
            "type": "object",
            "description": "The selector of the Pod",
            "additionalProperties": {
              "type": "string"
            }
          },
          "path": {
            "type": "string",
            "description": "The path of the service"
          }
        }
      }
    }
  }
}
